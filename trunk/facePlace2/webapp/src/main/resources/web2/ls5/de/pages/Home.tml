<html 	t:type="layout" 
		title="Home"
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
		xmlns:p="tapestry:parameter">

<div class="home">
	<t:if test="loggedInPerson">
		<div class="top">
			<div class="user">
				<t:beandisplay exclude="id, password" object="loggedInPerson"/>
			</div>
			<div class="msgs">
				<h2>Benachrichtigungen</h2>
				<t:alerts/>
			</div>
		</div>
		
		<!-- UserPosts -->
		
		<div class="bottom">
    		<div class="posts">
				<h2>Posts</h2>
				<div>
					<t:postingcomponent/>
				</div>
				<t:grid source="posts" row="post">

				</t:grid>
			</div>
			<div class="friends">
				<h2>Freunde</h2>
				<t:actionlink t:id="testmsg">TestMsg</t:actionlink>
			</div>
		</div>
			
		<!-- No User is logged in -->    	
			
    	<p:else>
		<p>Nobody is logged in!</p>
	</p:else>
    </t:if>
</div>
      
</html>