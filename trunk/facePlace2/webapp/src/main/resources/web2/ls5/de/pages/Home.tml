<html 	t:type="layout" 
		title="Home"
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
		xmlns:p="tapestry:parameter">

<div class="home">
	<t:if test="loggedInPerson">
		<div class="top">
			<div class="user">
				<!--<t:beandisplay exclude="id, password" object="loggedInPerson"/>-->
				<h2>${loggedInPerson.name}&nbsp; ${loggedInPerson.birthdate}</h2>
			</div>
			<div style="float:left;">
				<t:actionlink t:id="testmsg">TestMsg</t:actionlink><br/>
				<t:actionlink t:id="createTestEntries">Erstelle Testeintraege</t:actionlink><br/>
				<t:actionlink t:id="GetInvitations">Frage Einladungen ab</t:actionlink>
			</div>
			<div class="msgs">
				<t:alerts/>
			</div>
		</div>
		
		<!-- UserPosts -->
		
		<div class="bottom">
    		<div class="posts">
				<h2>Posts</h2>
				<div>
					<t:postingcomponent/>
				</div>
				<div style="float:bottom;">
					<t:grid source="posts" row="post" class="grid" rowsPerPage="10" exclude="id" reorder="creator, creationdate, msg"></t:grid>
				</div>
			</div>
			<div class="friends" align="right">
				<h2>Freunde</h2>
				<div style="float:bottom;">
					<t:grid source="friends" row="person" class="grid" rowsPerPage="10" exclude="id, password" add="delete">
						<p:deletecell>
                			<t:actionlink t:id="delete" context="loggedinperson.id">[-]</t:actionlink>
            			</p:deletecell>
            			<p:empty>
              				<p>Du hast hier keine Freunde. Nutze <t:pagelink page="facefind">faceFind</t:pagelink> um sie zu finden.</p>
            			</p:empty>
					</t:grid>
				</div>
			</div>
		</div>
			
		<!-- No User is logged in -->    	
			
    	<p:else>
		<p>Nobody is logged in!</p>
	</p:else>
    </t:if>
</div>
      
</html>