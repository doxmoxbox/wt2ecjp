
<form t:type="form" t:id="loginForm" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:label for="name"/>:
	<input t:type="TextField" t:id="name" t:validate="required,minlength=3" size="30"/>
	<br/>
	<t:label for="password"/>:
	<input t:type="PasswordField" t:id="password" t:validate="required,minlength=3" size="30"/>
	<br/>
	<input type="submit" value="Login"/>
	<t:pagelink page="Register">Neu Registrieren</t:pagelink>
</form>

